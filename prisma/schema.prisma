generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  email      String?  @unique
  name       String?  
  password   String?  
  created_at DateTime? @default(now())
  updated_at DateTime? @updatedAt
  bookmarks  BookMark[]
  @@map("users")
}

model BookMark {
  id         Int      @id @default(autoincrement())
  title      String?
  created_at DateTime
  updated_at DateTime
  user_id    Int
  user       User     @relation(fields: [user_id], references: [id])
  @@map("bookmarks")
}
